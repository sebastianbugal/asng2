<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <style>

    .button {
      background-color: white;
      color: black;
      border: 2px solid #252525; /* Green */
      width:auto;
      height:auto;
      padding:5px;
      display: inline-block;
      font-size: large;
      transition-duration: 0.4s;
    }
    .button:hover{
      background-color: rgb(141, 141, 141);
      color: black;
      border: 2px solid #252525; /* Green */
      width:auto;
      height:auto;
      padding:5px;
      display: inline-block;
      font-size: large;
      transition-duration: 0.4s;
    }
    .select{
      display: inline-block;
      margin:2px;
      padding:2px;
      width:auto;
      height:auto;
      border:1px solid #000;
      background-color: rgb(101, 117, 112);
    }
    .norm{
      display: inline-block;
      margin:2px;
      padding:2px;
      width:auto;
      height:auto;
      border:1px solid #000;
      background-color: aquamarine;
      cursor: pointer;
    }
    
  </style>
</head>

<body>

<% include ../partials/nav.ejs %>

<div class="container" id="main">
 
  
  <form class="" action="/del_user" method="post">
    <input id="user_selected" name="user_selected" type="hidden" value='' ><br>

    <input class="button"  type="submit" name="sub" value="Delete Selected User">

  </form>
  <form class="" action="/update" method="post">
    <input id="user_selected_up" name="user_selected_up" type="hidden" value='' ><br>
    <input class="button"  type="submit" name="sub" value="Change Attributes">

  </form>
<h2>Database Results</h2>
<% rows.forEach(function(r) { %>
<div class="norm" id= <%=r.uid%> >User ID:<%= r.uid %><br> User Name:<%= r.name%><br>Chess Elo: <%= r.chess_elo%></div>
<% }); %>
</div>
<script type="text/javascript" src="./script.js"></script>

</body>
</html>
